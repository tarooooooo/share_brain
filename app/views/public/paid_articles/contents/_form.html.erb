<%= simple_form_for(paid_article_content, url: public_paid_article_content_path(paid_article, paid_article_content) ) do |f| %>
  <div class="card-body">
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
    <%= f.input :main_image %>
    <%= f.input :movie_id, hint: '※YoutubeURLの下11桁を入力してください' %>
    <%= f.input :body, placeholder: '本文：Markdownで記述できます' %>

    <div class="card-footer">
      <%= f.submit class: 'btn btn-submit' %>
    </div>
  </div>
<% end %>
