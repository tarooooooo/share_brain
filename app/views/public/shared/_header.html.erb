<header class="shadow-sm">
  <nav class="navbar navbar-expand-lg" style="background-color: #333;">
    <div class="container-fluid">
      <%= link_to public_root_path, class:'navbar-brand p3 link-text-white' do %>
        <%= image_tag 'main_icon/main_icon.svg', size: '40x40', alt: 'main_icon' %>
        <span>ShareBrain</span>
      <% end %>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to 'マイページ', public_mypage_root_path, class:'nav-link link-text-white' %>
            </li>
            <li class="nav-item">
              <%= link_to '無料記事', public_articles_path, class:'nav-link link-text-white' %>
            </li>
            <li class="nav-item">
              <%= link_to '有料記事', public_paid_articles_path, class:'nav-link link-text-white' %>
            </li>
            <li class="nav-item">
              <%= link_to 'ログアウト', destroy_user_session_path, class: 'nav-link link-text-white' %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to '新規登録', new_user_registration_path, class: 'nav-link link-text-white' %>
            </li>
            <li class="nav-item">
              <%= link_to 'ログイン', new_user_session_path, class: 'nav-link link-text-white' %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>
