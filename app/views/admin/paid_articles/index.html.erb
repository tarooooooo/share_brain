<div class="container-fluid">
  <!-- /.row -->
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h3 class="card-title">教材一覧</h3>

          <div class="card-tools">
            <div class="input-group input-group-sm" style="width: 150px;">
              <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

              <div class="input-group-append">
                <button type="submit" class="btn btn-default">
                  <i class="fas fa-search"></i>
                </button>
              </div>
            </div>
          </div>
        </div>
        <!-- /.card-header -->
        <div class="card-body table-responsive p-0" style="height: 300px;">
          <table class="table table-head-fixed text-nowrap">
            <thead>
            <tr>
              <th>ID</th>
              <th>タイトル</th>
              <th>出品者</th>
              <th></th>
            </tr>
            </thead>
            <tbody>
            <% @paid_articles.each do |paid_article| %>
              <tr>
                <td><%= paid_article.id %></td>
                <td><%= paid_article.title %></td>
                <td><%= paid_article.seller_name %></td>
                <td>
                  <%= link_to '編集', edit_admin_paid_article_path(paid_article), class:'btn btn-info' %>
                  <%= link_to '削除', admin_paid_article_path(paid_article), method: :delete, class:'btn btn-danger' %>
                </td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
        <!-- /.card-body -->
      </div>
      <!-- /.card -->
    </div>
  </div>
</div>
